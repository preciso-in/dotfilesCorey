{
  "workbench.colorTheme": "Predawn",
  "workbench.iconTheme": "ayu",
  "editor.fontFamily": "Source Code Pro",
  "debug.console.fontFamily": "Source Code Pro",
  "editor.fontWeight": "500",
  "terminal.integrated.fontWeight": "600",
  "editor.fontSize": 16, //Use 22 for Screen Recordings
  "debug.console.fontSize": 16, //Use 22 for Screen Recordings
  "terminal.integrated.fontSize": 16, //Use 22 for Screen Recordings
  "window.zoomLevel": 0, // Use 2 for Screen Recordings
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "vim.insertModeKeyBindings": [
    {
      //exit insert mode
      "before": ["j", "k"],
      "after": ["<Esc>"]
    },
    {
      //exit insert mode
      "before": ["J", "K"],
      "after": ["<Esc>"]
    }
  ],
  "[plaintext]": {
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "editor.quickSuggestionsDelay": 100,
  "zenMode.centerLayout": false,
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": false,
  "editor.minimap.enabled": false,
  "workbench.settings.openDefaultSettings": true,
  "workbench.settings.useSplitJSON": false,
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "newUntitledFile",
  "editor.lineNumbers": "relative",
  "workbench.settings.applyToAllProfiles": ["editor.lineNumbers"],
  "vim.smartRelativeLine": true,
  "workbench.editor.empty.hint": "hidden",
  "editor.wordWrap": "on",
  "files.autoSave": "onFocusChange"
}
